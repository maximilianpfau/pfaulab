@Article{pmid32780863,
   Author="Sassmannshausen, M.  and Pfau, M.  and Thiele, S.  and Fimmers, R.  and Steinberg, J. S.  and Fleckenstein, M.  and Holz, F. G.  and Schmitz-Valckenberg, S. ",
   Title="{{L}ongitudinal {A}nalysis of {S}tructural and {F}unctional {C}hanges in {P}resence of {R}eticular {P}seudodrusen {A}ssociated {W}ith {A}ge-{R}elated {M}acular {D}egeneration}",
